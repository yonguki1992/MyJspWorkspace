<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- /콘텍스트명/package namespace/action name -->
	<package name="hello" namespace="/" extends="struts-default">
		<action name="">
			<result>/WEB-INF/view/index.jsp</result>
		</action>
		<!-- 경로의 처음이 / 면 namespace 포함하지 않음 -->
		<!-- 
		<action name="index">
			<result>/WEB-INF/view/index.jsp</result>
		</action>
		 -->
		<!-- 클래스만 지정하면 지정 클래스의 excute() -->
		<action name="home1" class="com.kyu.struts.action.HomeAction">
			<result name="success">/WEB-INF/view/home.jsp</result>
		</action>
		<!-- 클래스만 지정하면 지정 클래스의 method() 실행 -->
		<action name="home2" class="com.kyu.struts.action.HomeAction" method="method">
			<result name="success">/WEB-INF/view/home.jsp</result>
		</action>
		<!-- 와일드카드는 반드시 맨 뒤에 나와야 한다. 액션명이 jsp 파일명이 된다. -->
		<action name="*">
			<result>/WEB-INF/view/{1}.jsp</result>
		</action>
	</package>

</struts>