<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- /콘텍스트명/package namespace/action name -->
	<package name="model" namespace="/" extends="struts-default">
		<action name="">
			<result>/WEB-INF/view/index.jsp</result>
		</action>
		<!-- 로그인 확인 -->
		<action name="loginOk" class="com.kyu.struts.action.LoginObjectBackedAction">
			<result name="input">/WEB-INF/view/login.jsp</result>
			<result name="success">/WEB-INF/view/home.jsp</result>
		</action>
		<action name="loginOk2" class="com.kyu.struts.action.LoginModelDrivenAction">
			<result name="input">/WEB-INF/view/login2.jsp</result>
			<result name="success">/WEB-INF/view/home2.jsp</result>
		</action>
		<!-- 와일드카드는 반드시 맨 뒤에 나와야 한다. 액션명이 jsp 파일명이 된다. -->
		<action name="*">
			<result>/WEB-INF/view/{1}.jsp</result>
		</action>
	</package>

</struts>